<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colorPalette="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:text="Original palette" />

        <com.imagine.colorpalette.ColorPalette
            android:id="@+id/color_palette1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            colorPalette:palette="original" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:text="Soft colors palette" />

        <com.imagine.colorpalette.ColorPalette
            android:id="@+id/color_palette2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            colorPalette:palette="softColors" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:text="Turbo colors palette" />

        <com.imagine.colorpalette.ColorPalette
            android:id="@+id/color_palette3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            colorPalette:palette="turboColors" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:text="Black &amp; White palette" />

        <com.imagine.colorpalette.ColorPalette
            android:id="@+id/color_palette4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            colorPalette:palette="blackAndWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:text="Fashion colors palette" />

        <com.imagine.colorpalette.ColorPalette
            android:id="@+id/color_palette5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            colorPalette:palette="fashionColors" />

    </LinearLayout>

</ScrollView>